{
  "name": "audio-training",
  "version": "0.0.0-development",
  "license": "MIT",
  "type": "module",
  "author": "Jonluca DeCaro <audiotraining@jonlu.ca>",
  "description": "Audio parsing using deepgram",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    "package.json"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "bin": {
    "audio-training": "dist/bin.js"
  },
  "keywords": [
    "audio",
    "whisper",
    "diarization"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonluca/audio-training.git"
  },
  "bugs": {
    "url": "https://github.com/jonluca/audio-training/issues"
  },
  "homepage": "https://github.com/jonluca/audio-training",
  "scripts": {
    "prepublishOnly": "yarn build",
    "lint": "eslint src",
    "build": "rm -fr dist/* && tsc -p tsconfig.json && chmod +x dist/bin.js",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --write \"**/*.+(js|jsx|ts|tsx|har||json|css|md)\"",
    "test": "vitest --coverage"
  },
  "dependencies": {
    "@deepgram/sdk": "^2.2.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/mime-types": "^2.1.1",
    "@types/uuid": "^9.0.2",
    "@types/yargs": "^17.0.24",
    "execa": "^7.1.1",
    "find-bin": "^1.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-jetpack": "^5.1.0",
    "glob": "^10.3.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "mime-types": "^2.1.35",
    "uuid": "^9.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/eslint": "8.40.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-v8": "^0.32.2",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "typescript": "5.1.6",
    "vitest": "^0.32.2"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix"
    ],
    "**/*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  }
}
